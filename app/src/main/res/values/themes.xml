<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.BagrutProject" parent="Theme.Material3.DayNight">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.BagrutProject" parent="Base.Theme.BagrutProject" />

    <style name="RatingBarStyle" parent="Base.Widget.AppCompat.RatingBar">
        <item name="colorControlNormal">#E0E0E0</item>
        <item name="colorControlActivated">#FFD700</item>
        <item name="colorAccent">#FFD700</item>
    </style>

    <style name="TitleStyle">
        <item name="android:textColor">#333333</item>
        <item name="android:textSize">34sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">sans-serif-black</item>
        <item name="android:letterSpacing">0.03</item>

        <item name="android:shadowColor">#BBBBBB</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">2</item>
        <item name="android:shadowRadius">4</item>
    </style>


    <style name="CustomSpinnerStyle">
        <item name="android:background">@android:drawable/btn_dropdown</item>
        <item name="android:spinnerMode">dropdown</item>
    </style>

</resources>
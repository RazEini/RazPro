<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".screens.Odot"
    android:background="#f0f0f0">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="אודות האפליקציה שלי"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:layout_margin="20sp"/>

        <TextView
            android:id="@+id/introduction"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="האפליקציה שלי מציעה לך חוויית קנייה פשוטה ונוחה של מוצרי חשמל לבית ולעסק. עם מגוון רחב של מוצרים איכותיים ומחירים משתלמים, אני כאן כדי להקל עליך את תהליך הקנייה, ולספק לך את הכלים למצוא את המוצר המתאים ביותר לצרכים שלך."
            android:textSize="16sp"
            android:layout_marginBottom="16dp" />

        <TextView
            android:id="@+id/feature_title_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="החיפושים החכמים שלי"
            android:layout_gravity="right"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/feature_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="באמצעות מנוע חיפוש מתקדם, תוכל למצוא את המוצר המבוקש במהירות, תוך סינון לפי קטגוריות, מותגים, מחירים ודירוגים. כך תוכל למצוא בקלות את המוצר שאתה מחפש."
            android:textSize="16sp"
            android:layout_marginBottom="16dp" />

        <TextView
            android:id="@+id/feature_title_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="המלצות מותאמות אישית"
            android:layout_gravity="right"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/feature_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="האפליקציה לומדת את העדפותיך ומספקת לך המלצות מותאמות אישית למוצרים שיכולים להתאים לך, על בסיס רכישות קודמות ותחומי עניין."
            android:textSize="16sp"
            android:layout_marginBottom="16dp" />

        <TextView
            android:id="@+id/feature_title_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="הזמנות ומשלוחים"
            android:layout_gravity="right"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/feature_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="לאחר שבחרת את המוצר הרצוי, תוכל להוסיף אותו בקלות לעגלת הקניות ולבצע רכישה מיידית. אני מציעה לך מגוון אפשרויות משלוח נוחות ומהירות, כך שתוכל לקבל את המוצר עד לביתך או למקום העבודה."
            android:textSize="16sp"
            android:layout_marginBottom="16dp" />

        <TextView
            android:id="@+id/feature_title_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="שירות לקוחות מקצועי"
            android:layout_gravity="right"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/feature_4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="אם יש לך שאלות או בעיות, צוות שירות הלקוחות שלי זמין 24/7 ומוכן לעזור לך בכל עניין. אני כאן כדי להבטיח לך חוויית קנייה חלקה ומספקת."
            android:textSize="16sp"
            android:layout_marginBottom="16dp" />

        <TextView
            android:id="@+id/feature_title_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="בצע רכישה, תיהנה מהטכנולוגיה"
            android:layout_gravity="right"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/feature_5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="הורד את האפליקציה שלי עכשיו ותתחיל ליהנות מהקניות החכמות של עולם המוצרים החשמליים. לא משנה אם אתה מחפש מכשירי חשמל לבית, למשרד או לגינה – יש לי את כל מה שאתה צריך במקום אחד."
            android:textSize="16sp"
            android:layout_marginBottom="16dp" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
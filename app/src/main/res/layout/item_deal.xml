<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="12dp"
    android:layout_marginBottom="8dp"
    android:background="@drawable/card_background"
    android:elevation="4dp"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp"
    android:layout_marginTop="8dp">

    <!-- כותרת המבצע -->
    <TextView
        android:id="@+id/dealTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="שם המבצע"
        android:textSize="18sp"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:paddingBottom="4dp"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"/>

    <!-- תיאור המבצע -->
    <TextView
        android:id="@+id/dealDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="תיאור המבצע"
        android:textSize="16sp"
        android:textColor="@android:color/darker_gray"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:paddingTop="4dp"/>

    <!-- אחוז הנחה -->
    <TextView
        android:id="@+id/dealDiscount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="הנחה: 10%"
        android:textSize="16sp"
        android:textColor="@android:color/holo_green_dark"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:paddingTop="4dp"/>

    <!-- תוקף המבצע -->
    <TextView
        android:id="@+id/dealValidUntil"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="תוקף עד: 31/12/2025"
        android:textSize="16sp"
        android:textColor="@android:color/holo_red_dark"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:paddingTop="4dp"/>
</LinearLayout>
